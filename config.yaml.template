# 配置文件
# GitHub项目分析系统配置文件

# GitHub相关配置
github:
  # 搜索关键词
  search_keywords: ""
  # 最低star数要求
  min_stars: 100
   # 搜索关键词
  search_keywords: ""
  # 最低star数要求
  min_stars: 100
  # 编程语言过滤（空字符串表示所有语言）
  language: ""
  # 每次分析的项目数量
  max_results: 200
  # 主题标签过滤（空数组表示不过滤）
  topics: []
  # 搜索条件配置
  search_criteria:
    # 最低fork数要求
    min_forks: 10
    # 最小仓库大小（KB）
    min_size: 5
    # 最近更新时间范围（天）
    update_within_days: 7
    # 是否排除fork的仓库
    exclude_forks: true
    # 排序方式（stars/forks/updated）
    sort_by: "updated"
    # 排序顺序（desc/asc）
    sort_order: "desc"
  # GitHub API配置
  # GitHub API配置
  api:
    base_url: "https://api.github.com/search/repositories"
    user_agent: "GitHub-Analyzer/1.0"
    accept: "application/vnd.github.v3+json"
    contact_email: "your-email@example.com"

# OpenRouter API配置
openrouter:
  api_key: "your-api-key-here"  # 替换为你的API密钥
  model: "deepseek/deepseek-r1:free"
  api_url: "https://openrouter.ai/api/v1/chat/completions"
  max_tokens: 4000

# 邮件发送配置
email:
  smtp_server: "smtp.qq.com"
  smtp_port: 465
  sender_email: "your-qq-email@qq.com"  # 替换为你的QQ邮箱
  sender_password: "your-email-password"  # 替换为你的邮箱授权码
  recipients: ["recipient1@example.com", "recipient2@example.com"]  # 替换为实际收件人
  subject: "GitHub项目分析报告"

# 备用API配置
